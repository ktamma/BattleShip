@page
@using Domain
@model WebApp.Pages.Game.CreateConfig

@{
    ViewData["Title"] = "CreateConfig";
}

<h1>Create</h1>

<h4>Config</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Config.BoardSizeX" class="control-label"></label>
                <input asp-for="Config.BoardSizeX" class="form-control"/>
                <span asp-validation-for="Config.BoardSizeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.BoardSizeY" class="control-label"></label>
                <input asp-for="Config.BoardSizeY" class="form-control"/>
                <span asp-validation-for="Config.BoardSizeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.Player1Name" class="control-label"></label>
                <input asp-for="Config.Player1Name" class="form-control"/>
                <span asp-validation-for="Config.Player1Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.Player2Name" class="control-label"></label>
                <input asp-for="Config.Player2Name" class="form-control"/>
                <span asp-validation-for="Config.Player2Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.Name" class="control-label"></label>
                <input asp-for="Config.Name" class="form-control"/>
                <span asp-validation-for="Config.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.TouchRule" class="control-label"></label>
                <select asp-for="Config.TouchRuleId" class="form-control" asp-items="ViewBag.TouchRuleId"></select>
            </div>
            @for (var i = 0; i < Model.ShipConfigs.Count; i++)
            {
                <h4>@Model.ShipConfigs[i].Name</h4>
                <div class="form-group" hidden>
                    <label asp-for="@Model.ShipConfigs[i].Name" class="control-label"></label>
                    <input asp-for="@Model.ShipConfigs[i].Name" class="form-control"/>
                    <span asp-validation-for="@Model.ShipConfigs[i].Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ShipConfigs[i].Quantity" class="control-label"></label>
                    <input asp-for="@Model.ShipConfigs[i].Quantity" class="form-control"/>
                    <span asp-validation-for="@Model.ShipConfigs[i].Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ShipConfigs[i].ShipSizeX" class="control-label"></label>
                    <input asp-for="@Model.ShipConfigs[i].ShipSizeX" class="form-control"/>
                    <span asp-validation-for="@Model.ShipConfigs[i].ShipSizeX" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ShipConfigs[i].ShipSizeY" class="control-label"></label>
                    <input asp-for="@Model.ShipConfigs[i].ShipSizeY" class="form-control"/>
                    <span asp-validation-for="@Model.ShipConfigs[i].ShipSizeY" class="text-danger"></span>
                </div>

            }
            
            <div class="form-group">
                <input type="submit" name="saveToDatabase" value="save to database" class="btn btn-primary"/>
            </div>
            <div class="form-group">
                <input type="submit" name="JSONsave" value="save to JSON" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}